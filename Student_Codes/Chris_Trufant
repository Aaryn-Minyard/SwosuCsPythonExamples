import random

def sequence_1(n):
    return 2 * n

def sequence_2(n):
    return n ** 2

def sequence_3(n):
    return 3 * n + 1

def sequence_4(n):
    return 2 ** n

def generate_sequence(sequence_func):
    sequence = [sequence_func(n) for n in range(1, 6)]
    return sequence

def main():
    sequences = [sequence_1, sequence_2, sequence_3, sequence_4]
    chosen_sequence = random.choice(sequences)
    
    sequence = generate_sequence(chosen_sequence)
    
    print("Here are the first five terms of a sequence:")
    print(sequence)
    
    guess = int(input("Guess the sixth term of the sequence: "))
    
    actual_sixth_term = chosen_sequence(6)
    
    if guess == actual_sixth_term:
        print("Congratulations! Your guess is correct.")
    else:
        print(f"Sorry, the correct answer is {actual_sixth_term}.")

if __name__ == "__main__":
    main()
